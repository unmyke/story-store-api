{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://dojorena.io/schemas/config/db/simple-auth.json",
  "title": "Database configuration with simple authentication",
  "type": "object",
  "allOf": [
    {
      "$ref": "http://dojorena.io/schemas/config/db/common.json"
    }
  ],
  "properties": {
    "host": true,
    "port": true,
    "database": true,
    "auth": {
      "title": "Database auth method",
      "type": "string",
      "const": "simple"
    },
    "user": {
      "title": "Database user name",
      "type": "string",
      "pattern": "^[a-zA-Z0-9]+$"
    },
    "password": {
      "title": "Database user password",
      "type": "string"
    }
  },
  "required": ["auth", "user", "password"],
  "additionalProperties": false
}
