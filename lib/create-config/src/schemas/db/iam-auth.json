{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://dojorena.io/schemas/config/db/iam-auth.json",
  "title": "Database configuration with AWS IAM authentication",
  "type": "object",
  "allOf": [
    {
      "$ref": "http://dojorena.io/schemas/config/db/common.json"
    }
  ],
  "properties": {
    "host": true,
    "port": true,
    "database": true,
    "auth": {
      "title": "Database auth method",
      "type": "string",
      "const": "iam"
    },
    "user": {
      "title": "AWS IAM user name",
      "type": "string",
      "pattern": "^[a-zA-Z0-9]+$"
    },
    "region": {
      "title": "Database AWS region",
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    }
  },
  "required": ["auth", "user", "region"],
  "additionalProperties": false
}
