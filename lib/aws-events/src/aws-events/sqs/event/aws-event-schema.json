{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/schemas/aws/events/sqs/event.json",
  "title": "AWS SQS event",
  "type": "object",
  "properties": {
    "Records": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/record"
      }
    }
  },
  "required": ["Records"],
  "additionalProperties": false,
  "$defs": {
    "record": {
      "$schema": "http://json-schema.org/draft-07/schema",
      "$id": "/schemas/aws/events/sqs/record.json",
      "title": "AWS SQS event record",
      "type": "object",
      "properties": {
        "eventSource": {
          "type": "string",
          "const": "aws:sqs"
        },
        "messageId": {
          "type": "string",
          "format": "uuid"
        },
        "eventSourceARN": {
          "type": "string",
          "pattern": "^arn:[a-z-_0-9]+:sqs:[a-z-_0-9]+:[a-z-_0-9]+:[a-z-_0-9]+$"
        }
      },
      "required": ["eventSource", "messageId", "eventSourceARN"],
      "additionalProperties": true
    }
  }
}
