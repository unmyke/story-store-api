{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/schemas/product/product.json",
  "title": "Product",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "price": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "count": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": ["id", "title", "description", "price", "count"],
  "additionalProperties": false
}
